        <module>pinyougou_sms</module>
        <module>pinyougou_user_interface</module>
        <module>pinyougou_user_service</module>
        <module>pinyougou_user_web</module>
        <module>pinyougou_cart_interface</module>
        <module>pinyougou_cart_service</module>
